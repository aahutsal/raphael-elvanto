extends layout

block content
  include templates/search-tree
  include templates/marker_bubble_template
  script(src='https://maps.google.com/maps/api/js?key=#{serverApiKey}'  async defer)

  .row
    .col-sm-3
      .tabs-container
        ul.nav.nav-tabs
          li.active
            a(data-toggle='tab' href='#tab-1') Address
          li
            a(data-toggle='tab' href='#tab-2') City
          li
            a(data-toggle='tab' href='#tab-3') ZIP


      .tab-content
       #tab-1.tab-pane.active
        section.search_result
          section
              .panel.panel-default
                  .panel-heading
                      .clearfix
                        //.form-group
                          // label Search type
                          //- select.form-control#search_type(name='search_type')
                          //-   option(disabled='disabled' selected="selected") Choose search method
                          //-   option(value='city' title='example: Upland, Perris, Corona') City
                          //-   option(value='street' title='example: 385') Street
                          //-   option(value='loc' title='example: -117,33,40') Geolocation [lng,lat,rad]
                          //-   option(value='zip' title='example: 92879') ZIP code
                        .form-group
                          input(type='hidden' name='search_type' value='street')
                          label Search term
                          input.form-control(name="search_term", data-onkeypress="search_on_enter")
                        .form-group
                          button.btn.btn-sm.btn-primary(data-click="search")
                            | search
          section
            .panel.panel-default
                .panel-heading
                  .b-t.b-b(type='dataTree')




       #tab-2.tab-pane
        section.search_result
          section
              .panel.panel-default
                  .panel-heading
                      .clearfix
                        .form-group
                          input(type='hidden' name='search_type' value='city')
                          label Select city
                          select.form-control#search_city(name='search_term')
                        .form-group
                          button.btn.btn-sm.btn-primary(data-click="search")
                            | search
            section
              .panel.panel-default
                  .panel-heading
                    .b-t.b-b(type='dataTree')


       #tab-3.tab-pane
        section.search_result
            section
                .panel.panel-default
                    .panel-heading
                        .clearfix
                          .form-group
                            input(type='hidden' name='search_type' value='zip')
                            label Select ZIP
                            select.form-control#search_zip(name='search_term')
                          .form-group
                            button.btn.btn-sm.btn-primary(data-click="search")
                              | search
            section
              .panel.panel-default
                  .panel-heading
                    .b-t.b-b(type='dataTree')

    .col-sm-9.m-b-md
     #map
