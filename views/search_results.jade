include templates/marker_bubble_template

p Total #{peoples.length} results found
section
  if peoples.length > 0
    div#map
    br
    table.search_results
      thead
        tr
          td first name
          td last name
          td gender
          td city
          td address
      tbody
      for user in peoples
        tr
          td= user.firstname
          td= user.lastname
          td= user.gender
          td= user.home_city
          td= user.home_address

    script(type='text/javascript').
      var gMapPosArray = '#{gMapPos}'.split(",");
      var lng = gMapPosArray[0];
      var lat = gMapPosArray[1];
      var markers = '#{markers}';
      initMap(lng, lat, markers); //- TODO: pass people data to initMap

